<%= link_to "Ranking użytkowników", users_path %>

<% if user_signed_in? %>
<% if current_user.has_role? :writer %>
        <div id="writer-menu-link" class="dropdown">
          <%= link_to "Moja twórczość", "#", class: 'dropdown-toggle' %>
          <div id="writer-menu" class="dropdown-menu">
            <%= link_to "Napisz wiersz", new_poem_path %>
            <%= link_to "Napisane wierse", written_path %>
          </div>
        </div>

<% end %>

<% if current_user.has_role? :reader %>
        <div id="reader-menu-link" class="dropdown">
          <%= link_to "Czytelnik", "#", class: 'dropdown-toggle' %>
          <div id="reader-menu" class="dropdown-menu">
            <%= link_to "Czytaj wiersze", poems_path %>
            <%= link_to "Obserwowane wiersze", subscribed_path %>
            <%= link_to "Polubione wiersze", favourites_path %>
          </div>
        </div>
<% end %>

<% end %>