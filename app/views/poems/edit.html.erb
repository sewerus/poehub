<div class="input-form">
  <h4>Edytujesz parametry wiersza: <span class="poem-title"><%= @poem.title %></span></h4>
</div>

<div class="input-form">
  <%= form_for(@poem, :url => {:action => "update"}, :html => {:role => 'form'}) do |f| %>
      <div class="form-group">

        <%= f.label 'Tytuł' %>
        <div class="input-field">
          <%= f.text_field :title, :autofocus => true, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div>
          Okres skamienienia
        </div>
        <div class="input-field">
          <%= f.date_select :stone_date, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div>
          Kategoria
        </div>
        <div class="input-field">
          <table>
            <% Tag.all.each do |tag| %>
                <tr>
                  <td>
                    <%= check_box_tag "poem[tag_ids][]", tag.id, @poem.tags.include?(tag) %><%= tag.title %>
                  </td>
                </tr>
            <% end %>
          </table>
        </div>
      </div>
      <%= f.submit 'Wprowadź zmiany' %>
  <% end %>
</div>